#!/usr/bin/env bash

set -eu

args=""
while test $# -gt 0
do
	value="$1"
	case "$value" in
		-c|--create)
			args="$args --push-option merge_request.create"
			;;
		-a|--merge-when-pipeline-succeeds)
			args="$args --push-option merge_request.merge_when_pipeline_succeeds"
			;;
		*)
			args="$args $value"
			;;
	esac
	shift
done

branch=$(git branch --show-current)
if [ -z "$branch" ]; then
	echo "[Error] You are currently not on a branch. Aborting..."
	exit 1
fi

if echo $branch | grep -q '^feature/[[:digit:]]*$'
then
	id=${branch#feature/}
	title="Feature #$id"
	description="Implements #$id"
	args="$args --push-option merge_request.title=\'Feature #$id\'"
	args="$args --push-option merge_request.title=\'Implements #$id\'"
fi

git push --set-upstream origin $branch $args
